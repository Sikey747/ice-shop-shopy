{{ 'swiper.css' | asset_url | stylesheet_tag }}
<script defer src="{{ 'swiper.js' | asset_url }}"></script>

<script>
  window.addEventListener('DOMContentLoaded', function () {
    const heroSwiper = new Swiper('#shopify-section-{{ section.id }} .hero .swiper', {
      loop: true,
      autoHeight: true,
      navigation: {
        nextEl: '#shopify-section-{{ section.id }} .hero .container .swiper-button-next-{{ section.id }}',
        prevEl: '#shopify-section-{{ section.id }} .hero .container .swiper-button-prev-{{ section.id }}',
      },
    });
  });
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "label": "Colections",
      "id": "colections",
      "type": "collection"
    },
    {
      "label": "Discription text",
      "id": "discrip-text",
      "type": "richtext",
      "default": "<p>You text</p>"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
