<div class="container pt-[clamp(3rem,2.051vw+2.654rem,4.5rem)] pb-[clamp(1.5rem,0.28vw+1.435rem,1.688rem)] flex sm:flex-row flex-col justify-between gap-2 ">
  <div class="flex flex-col sm:max-w-[310px] max-w-full sm:w-1/2 w-full">
    {% render "logo"
      , logo: section.settings.logo-icon
      , class: "mb-4" %}
    <p class="text-primary-gray1">Phosf luorescently engage worldwide method process shopping.</p>
    {% render "social-icon-block"
      , socials: section.blocks
      , class: "items-center hidden gap-4 mt-6 sm:flex" %}
  </div>

  <div class="flex justify-between w-full max-w-full gap-2 sm:w-1/2">
    {% for linklist in section.blocks %}
      {% if linklist.type == "footerLinks" %}

        {% for listLink in linklist.settings.linksList %}
          <h4 class="">{{ listLink.title }}</h4>
          <ul>
            {% for link in listLink.links %}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endfor %}
      {% endif %}
    {% endfor %}

  </div>
</div>

