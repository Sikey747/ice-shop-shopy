{% schema %}
  {
    "name": "Footer",
    "tag": "footer",
    "settings": [
      {
        "label": "Logo",
        "id": "logo-icon",
        "type": "image_picker"
      }
    ],
    "blocks": [
      {
        "name": "Footer Links",
        "type": "footerLinks",
        "settings": [
          {
            "label": "Title Links",
            "id": "title",
            "type": "text"
          }, {
            "label": "Links",
            "id": "linksList",
            "type": "link_list"
          }
        ]
      }, {
        "name": "Social Icon",
        "type": "socialIcon",
        "settings": [
          {
            "label": "Icon img/svg",
            "id": "iconImg",
            "type": "image_picker"
          }, {
            "label": "Link",
            "id": "socialLink",
            "type": "url"
          }
        ]
      }
    ]
  }
{% endschema %}