<div data-overlay="close" class="absolute z-[50] h-dvh w-dvw bg-black"></div>

<style>
  [data-overlay="close"] {
    transition: all 0.1s ease-in-out;
    left: -100%;
    opacity: 0;
  }
  [data-overlay="open"] {
    left: 0;
    transition: all 0.1s ease-in-out;
    opacity: 0.7;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const overlay = document.querySelector("[data-overlay]");
    const body = document.body;
    //add element button
    const burger = document.querySelector("[data-burger-menu]");
  
  const overlayOpen = () => {
    overlay.setAttribute("data-overlay", "open");
  };
  
  const overlayClose = () => {
    overlay.setAttribute("data-overlay", "close");
  };
  
  if (overlay) {
    overlay.addEventListener("click", () => {
      if (body.getAttribute("data-burger-menu") === "open" ) {
        overlayClose();
        body.setAttribute("data-burger-menu", "close");
      }
    });
    //add evtnt click 
    burger.addEventListener("click", () => {
        overlayOpen();
    });
  }
  });
</script>